style.
	.blur-on-load {
		filter: blur(1px);
		-webkit-filter: blur(1px);
		opacity: 0.5;
	}
	.table-responsive {
	    display: table;
	}

div(class="test")
	div(class="")
		table(class="table table-striped table-responsive-sm")
			thead
				//tr
				//	td Evento
				//	td Año
				//	td Tipo
				//	td
				//	td
				//	td Pais
				//	td
				//	td
				//	td Muertes
				//	td Coste
				//	td Coste (sin inflación)
				//	td
				//	td
				tr
					td(ng-class="{'font-weight-bold': filter.event}")
						label Evento
						input(ng-change="navigate()" ng-model-options='{ debounce: 50 }' ng-model="filter.event" class="form-control" type="text" placeholder="Evento")
					td(ng-class="{'font-weight-bold': filter.from}" colspan="2")
						label(for="a") Desde
						input(id="a" ng-change="navigate()" ng-model-options='{ debounce: 50 }' ng-model="filter.from" placeholder="Desde" class="form-control" type="number" step="1" min="1")
					td(ng-class="{'font-weight-bold': filter.to}" colspan="2")
						label(for="b") Hasta
						input(id="b" ng-change="navigate()" ng-model-options='{ debounce: 50 }' ng-model="filter.to" placeholder="hasta" class="form-control" type="number" step="1" min="1")
					td(ng-class="{'font-weight-bold': filter.type}" colspan="3")
						label Tipo
						input(ng-change="navigate()" ng-model-options='{ debounce: 50 }' ng-model="filter.type" class="form-control" type="text" placeholder="Tipo")
					td(ng-class="{'font-weight-bold': filter.country}" colspan="2")
						label Pais
						input(ng-change="navigate()" ng-model-options='{ debounce: 50 }' ng-model="filter.country" class="form-control" type="text" placeholder="País")
					td(ng-class="{'font-weight-bold': filter.death}")
						label Muertes
						input(ng-change="navigate()" ng-model-options='{ debounce: 50 }' ng-model="filter.death" class="form-control" type="number" placeholder="Muertes"  step="0.01" min="0")
					td(ng-class="{'font-weight-bold': filter.inflation}")
						label Coste
						input(ng-change="navigate()" ng-model-options='{ debounce: 50 }' ng-model="filter.inflation" class="form-control" placeholder="Coste" type="number" step="0.01" min="0")
					td(ng-class="{'font-weight-bold': filter['no-inflation']}")
						label Coste sin inflación
						input(ng-change="navigate()" placeholder="Coste (sin inflación)" ng-model-options='{ debounce: 250 }' ng-model="filter['no-inflation']" class="form-control" type="number" step="0.01" min="0")
					td
						div(class="d-flex flex-row justify-content-center align-items-center")
							p
								span &nbsp;
								button(type="button" ng-click="removeAll()" class="align-middle btn btn-lg btn-block btn-danger")
									i(class="fas fa-times")

			tbody(ng-class="{'blur-on-load': loading}")
				tr(ng-repeat="d in data track by $index")
					td(ng-class="{'border font-weight-bold': filter.event}")
						span {{d.event}}
					td(ng-class="{'border font-weight-bold': filter.from || filter.to}" colspan="4")
						span {{d.year}}
					td(ng-class="{'border font-weight-bold': filter.type}" colspan="3")
						span(ng-repeat="nType in d.type track by $index") 
							span {{nType}}
							span(ng-if="!$last") , 
					td(ng-class="{'border font-weight-bold': filter.country}" colspan="2")
						span(ng-repeat="nCountry in d.country track by $index") {{nCountry}}{{(!$last) ? ',' : '' }}&nbsp;
					td(ng-class="{'border font-weight-bold': filter.death}")
						span {{d.death}}
					td(ng-class="{'border font-weight-bold': filter.inflation}")
						span {{d.inflation}}
					td(ng-class="{'border font-weight-bold': filter['no-inflation']}")
						span {{d["no-inflation"]}}

					td(class="btn-group")
						button(type="button" ng-click="modify(d)" class="btn btn-md btn-outline-dark")
							i(class="fas fa-pen")
						button(type="button" ng-click="remove(d.event)" class="btn btn-md btn-outline-danger")
							i(class="fas fa-times")
			tfoot
				tr
					td(colspan="13")
						div(class="d-flex justify-content-around")
							div(class="btn-group")
								button(ng-disabled="loading" ng-click="navigate($index)" class="btn btn-primary btn-lg" ng-repeat="item in [].constructor(filter.count) track by $index" ng-class="{'btn-info': $index == filter.offset}") {{$index + 1}}
					td(colspan="1")
						button(type="button" ng-click="create()" class="btn btn-block btn-success")
							i(class="fas fa-plus")