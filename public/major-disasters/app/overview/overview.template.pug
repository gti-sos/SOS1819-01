style.
	.blur-on-load {
		filter: blur(1px);
		-webkit-filter: blur(1px);
		opacity: 0.5;
	}
	.table-responsive {
	    display: table;
	}

div(class="test")
	div
		table(class="table table-striped table-responsive-sm")
			thead(class="")
				tr(class="text-center")
					th(ng-class="{'font-weight-bold': filter.event}")
						label Evento
					th(ng-class="{'font-weight-bold': filter.from}" colspan="1")
						div(class="form-check-inline input-group-sm")
							label(for="a" class="form-check-label") Desde&nbsp;&nbsp;
							input(id="a" ng-change="navigate()" ng-model-options='{ debounce: 50 }' ng-model="filter.from" placeholder="año" class="form-control form-check-input" type="number" step="1" min="1")

					th(ng-class="{'font-weight-bold': filter.type}" colspan="1")
						label Tipo
					th(ng-class="{'font-weight-bold': filter.country}" colspan="1")
						label Pais
					th(ng-class="{'font-weight-bold': filter.death}")
						label Muertes
					th(ng-class="{'font-weight-bold': filter.inflation}")
						label Coste
					th(ng-class="{'font-weight-bold': filter['no-inflation']}")
						label Coste sin inflación
					th(colspan="1")
						button(type="button" ng-click="removeAll()" class="btn btn-block btn-danger")
							i(class="fas fa-trash-alt")

				tr(class="text-center")
					th(class="input-group-sm")
						input(ng-change="navigate()" ng-model-options='{ debounce: 50 }' ng-model="filter.event" class="form-control" type="text" placeholder="Evento")
					th(ng-class="{'font-weight-bold': filter.to}")
						div(class="form-check-inline input-group-sm")
							label(for="b" class="form-check-label") Hasta&nbsp;&nbsp;
							input(id="b" ng-change="navigate()" ng-model-options='{ debounce: 50 }' ng-model="filter.to" placeholder="año" class="form-control form-check-input" type="number" step="1" min="1")
					th(class="input-group-sm")
						input(ng-change="navigate()" ng-model-options='{ debounce: 50 }' ng-model="filter.type" class="form-control" type="text" placeholder="Tipo")
					th(class="input-group-sm")
						input(ng-change="navigate()" ng-model-options='{ debounce: 50 }' ng-model="filter.country" class="form-control" type="text" placeholder="País")
					th(class="input-group-sm")
						input(ng-change="navigate()" ng-model-options='{ debounce: 50 }' ng-model="filter.death" class="form-control" type="number" placeholder="Muertes"  step="0.01" min="0")
					th(class="input-group-sm")
						input(ng-change="navigate()" ng-model-options='{ debounce: 50 }' ng-model="filter.inflation" class="form-control" placeholder="Coste" type="number" step="0.01" min="0")
					th(class="input-group-sm")
						input(ng-change="navigate()" placeholder="Coste (sin inflación)" ng-model-options='{ debounce: 250 }' ng-model="filter['no-inflation']" class="form-control" type="number" step="0.01" min="0")

					th(class="input-group-sm")
						button(type="button" ng-click="resetFilters()" class="btn btn-block btn-info")
							i(class="fas fa-redo-alt")
						//div(class="d-flex flex-row justify-content-center align-items-center")
						//	p
						//		span &nbsp;
								button(type="button" ng-click="removeAll()" class="align-middle btn btn-lg btn-block btn-danger")
									i(class="fas fa-times")

			tbody(ng-class="{'blur-on-load': loading}" class=" table-sm")
				tr(ng-if="data.length === 0" class="bg-secondary text-white text-center")
					td(colspan="8" class="") No hay datos con este criterio
				tr(ng-repeat="d in data track by $index")
					td(ng-class="{'border font-weight-bold': filter.event}")
						span {{d.event}}
					td(class="text-center" ng-class="{'border font-weight-bold': filter.from || filter.to}" colspan="1")
						span {{d.year}}
					td(ng-class="{'border font-weight-bold': filter.type}" colspan="1")
						span(ng-repeat="nType in d.type track by $index") 
							span {{nType}}
							span(ng-if="!$last") , 
					td(ng-class="{'border font-weight-bold': filter.country}" colspan="1")
						span(ng-repeat="nCountry in d.country track by $index") {{nCountry}}{{(!$last) ? ',' : '' }}&nbsp;
					td(ng-class="{'border font-weight-bold': filter.death}")
						span {{d.death}}
					td(ng-class="{'border font-weight-bold': filter.inflation}")
						span {{d.inflation}}
					td(ng-class="{'border font-weight-bold': filter['no-inflation']}")
						span {{d["no-inflation"]}}
					td(class="btn-group")
						button(type="button" ng-click="modify(d.event)" class="btn btn-md btn-outline-dark")
							i(class="fas fa-pen")
						button(type="button" ng-click="remove(d.event)" class="btn btn-md btn-outline-danger")
							i(class="fas fa-times")
			tfoot
				tr
					td(colspan="7")
						div(class="d-flex justify-content-around")
							div(class="btn-group")
								button(ng-disabled="loading" ng-click="navigate($index)" class="btn btn-primary btn-lg" ng-repeat="item in [].constructor(count) track by $index" ng-class="{'btn-info': $index == filter.offset}") {{$index + 1}}
					td(colspan="1")
						button(type="button" ng-click="create()" class="btn btn-block btn-success")
							i(class="fas fa-plus")